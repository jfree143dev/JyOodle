~ CFact.ood
~ - Implements recursive factorial algorithm

class CFact is

 num: int
 num2: int

 Fact(num: int): int is
   answer: int
 begin
    writeint(num)
    if num = 0 then    
      answer := 1
    else
      answer := num * Fact(num - 1)
    end if
    Fact := answer
 end Fact
  
  ~ Accesses global variable num
  Go() is
   isOk: boolean
  begin
    isOk := false
    loop while not isOk
      ~num := in.readint()
      num := readint()       
      isOk := (num >= 1)
    end loop    
  end Go
 
  start() is
  begin 
    Go()
    num2 := Fact(num)
    ~out.writeint(num)   ~ Original number
    writeint(num)
    ~out.writeint(num2)  ~ factorial of num
    writeint(num2)
  end start
end CFact

